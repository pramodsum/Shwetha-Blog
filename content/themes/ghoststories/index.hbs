<!DOCTYPE html>
<html lang="en" class="no-js demo-4">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{meta_title}}</title>
        <meta name="description" content="{{meta_description}}" />
		<meta name="author" content="Theme Spectre" />
		<link rel="stylesheet" type="text/css" href="{{@blog.url}}/assets/css/default.css" />
		<link rel="stylesheet" type="text/css" href="{{@blog.url}}/assets/css/bookblock.css" />
		<!-- custom demo style -->
		<link rel="stylesheet" type="text/css" href="{{@blog.url}}/assets/css/demo4.css" />
		<script src="{{@blog.url}}/assets/js/modernizr.custom.js"></script>
	</head>
	<body>
		<div class="container">
			<div class="bb-custom-wrapper">
				{{{body}}}
				<div id="bb-bookblock" class="bb-bookblock">

					<div class="bb-item">

                        <div class="bb-custom-firstpage" style="background-image: url({{@blog.cover}}); background-size: cover">
                            <div class="title-container">
                                <h1 class="content-title">{{@blog.title}} <span>{{@blog.description}}</span></h1>
                            </div>
						</div>

						<div class="author-wrapper">
                            <div class="author">
                                Swipe the screen, click the buttons, or tap the arrow keys to turn the page.
                            </div>
						</div>

					</div>

                    {{#foreach posts}}
                        <div class="bb-item story-page">
                            <div class="bb-custom-side left vertical-center" style="background-image: url({{image}})">
                                <div class="title-container">
                                    <h1 class="content-title">{{title}}</h1>
                                </div>
                            </div>
                            <div class="bb-custom-side right">
                                <main class="content">
                                    {{content}}
                                </main>
                            </div>
                        </div>
                    {{/foreach}}

				</div>

				<nav>
<!--
					<a id="bb-nav-first" href="#" class="bb-custom-icon bb-custom-icon-first">First page</a>
-->
					<a id="bb-nav-prev" href="#" class="bb-custom-icon bb-custom-icon-arrow-left">Previous</a>
					<a id="bb-nav-next" href="#" class="bb-custom-icon bb-custom-icon-arrow-right">Next</a>
<!--
					<a id="bb-nav-last" href="#" class="bb-custom-icon bb-custom-icon-last">Last page</a>
-->
				</nav>

			</div>

		</div><!-- /container -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
		<script src="{{@blog.url}}/assets/js/jquerypp.custom.js"></script>
        <script src="{{@blog.url}}/assets/js/jquery.bookblock.js"></script>
        <script src="{{@blog.url}}/assets/js/jquery.slabtext.min.js"></script>
        <script src="{{@blog.url}}/assets/js/jquery.fitvids.js"></script>
        <script src="{{@blog.url}}/assets/js/ghoststories.js"></script>

	</body>
</html>